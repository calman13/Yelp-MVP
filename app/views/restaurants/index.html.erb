<h2>Categories</h2>

<ul>
  <% categories.each do |category| %>
    <li><%= category.capitalize %></li>
  <% end %>
</ul>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        
        <td><%= restaurant.phone_number %></td>
        <td><%= link_to 'Show', restaurant_path(restaurant) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, 'btn btn-primary' %>