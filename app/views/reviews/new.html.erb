<h1>Add review <%= @restaurant.name %></h1>
<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <ul>
    <% if @review.errors.any? %>
      <% @review.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </ul>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>